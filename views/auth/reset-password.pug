extends ../layout/index

block contenido
	h1(class="text-center text-4xl mb-8 uppercase bg-gradient-to-t bg-clip-text text-transparent font-bold from-sky-500 from- via-purple-400 via-40% to-cyan-300 to-") #{pagina}
	main

		if errores
			div(class="max-w-md mx-auto my-10")
				each error in errores
					p(class="bg-rose-400 text-white uppercase text-xs text-center p-2 mb-1 font-bold") #{error.msg}
		
		form(class="mx-auto max-w-md shadow-2xl p-3 w-auto rounded-lg bg-gradient-to-b from-cyan-500 from- via-sky-400 via- to-blue-800 to-" method="POST")
			div
				label(class="block")
					span(class="block text-lg text-gray-500") Nueva Contraseña
					input(type="password" class="peer ... w-full rounded-lg p-2 border-none" placeholder="contraseña" name="password")
					p(class="mt-2 invisible peer-invalid:visible text-rose-400 text-sm") contraseña debe tener minimo 8 caracteres
			//- div
			//- 	label(class="block")
			//- 		span(class="block text-lg text-gray-500") Repetir Contraseña
			//- 		input(type="password" class="peer ... w-full rounded-lg p-2 border-none" placeholder="contraseña" name="repetir-password")
			//- 		p(class="mt-2 invisible peer-invalid:visible text-rose-400 text-sm") contraseña debe tener minimo 8 caracteres
		
			div
				input(type="submit" value="Cambiar Contraseña" class="bg-blue-600 hover:bg-blue-800 uppercase py-2 px-4 mb-3 rounded inline-flex items-center text-yellow-200")